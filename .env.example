# Database
DATABASE_URL="postgresql://user:password@localhost:5432/alex_db?schema=public"

# JWT Secret (generate with: openssl rand -base64 32)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# API Keys
# OpenAI API для генерации сообщений (опционально)
OPENAI_API_KEY=sk-your-key-here

# Google Custom Search API (ОБЯЗАТЕЛЬНО для поиска поставщиков!)
# Получить: https://console.cloud.google.com/ → Enable "Custom Search API" → Create API Key
GOOGLE_API_KEY=AIzaSy...your-google-api-key-here

# Google Search Engine ID (ОБЯЗАТЕЛЬНО для поиска поставщиков!)
# Получить: https://programmablesearchengine.google.com/ → Create → Copy "Search engine ID"
GOOGLE_SEARCH_ENGINE_ID=your-search-engine-id-here

# См. подробную инструкцию в файле GOOGLE_API_SETUP.md

# Email (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# WhatsApp Web JS
WHATSAPP_SESSION_PATH=./wwebjs_auth
# Путь к Chrome браузеру (опционально, если не указан - Puppeteer найдет автоматически)
# PUPPETEER_EXECUTABLE_PATH=/path/to/chrome

# S3/MinIO для хранения файлов
S3_ENDPOINT=http://localhost:9000
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin
S3_BUCKET=alex-quotes
S3_REGION=us-east-1

# App Configuration
NEXT_PUBLIC_APP_URL=http://localhost:3000
NODE_ENV=development

# Лимиты
MAX_REQUESTS_PER_MONTH=1000
MAX_PARALLEL_TASKS=10

# DO NOT commit the actual .env file with real keys
# Copy this file to .env and replace the values 